cflags = -Wall -g -c
lflags = -g
objects = Wordcount.o worstore.o tokenizer.o
objects1 = WordCount.o wordstore.o tokenizer1.o
objects2 = WordCount.o wordstore2.o tokenizer.o
objects3 = WordCount.o wordstore3.o tokenizer.o
objects4 = WordCount.o wordstore4.o tokenizer.o
all = WordCount WordCount1 WordCount2 WordCount3 WordCount4

all: $(all)

WordCount: $(objects)
	gcc $(lflags) -o WordCount $(objects)

WordCount1: $(objects1)
	gcc $(lflags) -o WordCount1 $(objects1)

WordCount2: $(objects2)
	gcc $(lflags) -o WordCount2 $(objects1)

WordCount3: $(objects)
	gcc $(lflags) -o WordCount3 $(objects)

WordCount4: $(objects1)
	gcc $(lflags) -o WordCount4 $(objects1)


%.o: %.c
	$(CC) $(cflags $< -o $@